{
  "$schema": "..\\node_modules/@tauri-apps/cli\\schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../dist",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Project Builder",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "execute": true,
        "open": "^(C:.*|\\.*)",
        "scope": [
          {
          "name": "cd",
          "cmd": "cd",
          "args": [{ "validator": "\\S+"}]
          },
          {
          "name": "make_env",
          "cmd": "python",
          "args": ["-m", "venv", "env" ]
          },
          {
            "name": "git",
            "cmd": "git",
            "args": ["init"]
          },
          {
            "name": "git-commit",
            "cmd": "git",
            "args": ["commit", "-m", { "validator": "\\S+" }]
          },
          {
            "name": "git-add-all",
            "cmd": "git",
            "args": ["add", "."]
          },
          {
            "name": "github-link",
            "cmd": "git",
            "args": ["remote", "add", "origin", { "validator": "\\S+" }]
          },
          {
            "name": "github-branch-rename",
            "cmd": "git",
            "args": ["branch", "-M", "main"]
          },
          {
            "name": "github-push-initial",
            "cmd": "git",
            "args": ["push", "-u", "origin", "main"]
          },
          {
            "name": "vscode-open",
            "cmd": "C:\\Users\\jacka\\AppData\\Local\\Programs\\Microsoft VS Code\\bin\\code.cmd",
            "args": true
          },
          {
            "name": "react-app",
            "cmd": "C:\\Users\\jacka\\AppData\\Roaming\\npm\\npx.cmd",
            "args": true
          }
          ],
        "sidecar": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.jrenning",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["C:\\Projects\\Tauri\\test\\settings.json"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Project Builder",
        "width": 800
      }
    ]
  }
}